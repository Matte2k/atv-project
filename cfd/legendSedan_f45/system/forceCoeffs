upperBody
{
    type            forceCoeffs;

    libs            (forces);

    writeControl    timeStep;
    timeInterval    1;

    log             yes;

    patches         (SEDAN_UPPER_BODY);
    rho             rhoInf;                 // Indicates incompressible
    rhoInf          1;                      // Required when rho = rhoInf
    liftDir         (0 0 1);
    dragDir         (1 0 0);
    CofR            (0 0 0);                // Axle midpoint on ground
    pitchAxis       (0 1 0);
    magUInf         17.5;
    lRef            1.854;                  // Wheelbase length
    Aref            0.665;                  // Estimated for Sedan
}

