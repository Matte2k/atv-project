FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     simpleFoam;

startFrom       latestTime;

startTime       1000;

stopAt          endTime;

endTime         2600;

deltaT          1;

writeControl    timeStep;

writeInterval   200;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

// ************************************************************************* //

functions
{
   // #include "streamLines"
   // #include "wallBoundedStreamLines"
   // #include "cuttingPlane"
    #include "forceCoeffs"
   // #include "ensightWrite"         // ??? CAPIRE COSA FA ??? - eMecc non la usano

    solverInfo
    {
        type            solverInfo;
        libs            ("libutilityFunctionObjects.so");
        fields          (U p k omega);
        writeResidualFields no;
    }

    yplus
    {
        type            yPlus;
        libs            ("libfieldFunctionObjects.so");
        enabled         true;
        writeControl    outputTime;
    }

    // eMecc calcolano tante altre cose... chiedere ad Ali maybe
}


